<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-2">
      <div class="restaurant-show-title">
      <h1><%= @restaurant.name %></h1>
      </div>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=600x300&sensor=false&maptype=roadmap&markers=color:red|#{@restaurant.address}" %>
      <h2>
        <%= pluralize @restaurant.reviews.size, "review" %>
      </h2>

      <div id="reviews">
        <% if @restaurant.reviews.blank? %>
          No reviews of <%= @restaurant.name %> yet!
        <% else %>
          <% @restaurant.reviews.each do |review| %>
            <%= render 'reviews/review', review: review %>
          <% end %>
        <% end %>
      </div>

      <div id="new_review">
        <%= render "reviews/form", restaurant: @restaurant, review: @review %>
      </div>

    </div>
  </div>
</div>

<div class="test">
  <div class="box bekah">
    <div class="item">submit</div>
  </div>
</div>

